<Window x:Class="DentaKlad.Design.Departments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DentaKlad.Design"
        mc:Ignorable="d"
        Title="Departments" Height="450" Width="800">
    <Grid>
        <TextBox Name="NameBox" HorizontalAlignment="Left" Height="30" Margin="26,25,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="182"/>
        <DataGrid Name="DeptTable" d:ItemsSource="{d:SampleData}" Margin="0,176,0,-176"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Height="40" Margin="551,98,0,0" VerticalAlignment="Top" Width="151" Click="Button_Click_Delete"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Height="25" Margin="240,40,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Add"/>
        <Button Content="Изменить" HorizontalAlignment="Left" Height="24" Margin="240,81,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_Edit"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Height="24" Margin="333,81,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_SaveChanges"/>

    </Grid>
</Window>
